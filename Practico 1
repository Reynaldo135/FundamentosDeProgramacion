#include <iostream>
using namespace std;

int main() {
    float P, costo;

    cout << "Ingresa el peso de la carta en gramos: ";
    cin >> P;

    if (P > 0 && P < 50) costo = 1.50;
    else if (P <= 100) costo = 4.00;
    else if (P <= 200) costo = 6.00;
    else if (P <= 350) costo = 10.50;
    else if (P <= 500) costo = 15.00;
    else {
        cout << "NO PUEDE ENVIAR COMO CARTA" << endl;
        return 0;
    }

    cout << "El costo del envio es: Bs. " << costo << endl;

    return 0;
}
12
#include <iostream>
using namespace std;

int main() {
    int dia, mes;

    cout << "Ingresa el dia: ";
    cin >> dia;
    cout << "Ingresa el mes (1-12): ";
    cin >> mes;

    if ((mes == 9 && dia >= 21) || (mes == 10) || (mes == 11) || (mes == 12 && dia < 21))
        cout << "Primavera" << endl;
    else if ((mes == 12 && dia >= 21) || (mes == 1) || (mes == 2) || (mes == 3 && dia < 21))
        cout << "Verano" << endl;
    else if ((mes == 3 && dia >= 21) || (mes == 4) || (mes == 5) || (mes == 6 && dia < 21))
        cout << "Otono" << endl;
    else
        cout << "Invierno" << endl;

    return 0;
}
13
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    float a, b, c, d, x1, x2;

    cout << "Resolver ax^2 + bx + c = 0" << endl;
    cout << "Ingresa a, b y c: ";
    cin >> a >> b >> c;

    if (a == 0) {
        cout << "No es cuadratica, es lineal." << endl;
    } else {
        d = b*b - 4*a*c;

        if (d > 0) {
            x1 = (-b + sqrt(d)) / (2*a);
            x2 = (-b - sqrt(d)) / (2*a);
            cout << "Dos soluciones reales: " << x1 << " y " << x2 << endl;
        } else if (d == 0) {
            x1 = -b / (2*a);
            cout << "Una solucion doble: " << x1 << endl;
        } else {
            cout << "No hay soluciones reales (discriminante negativo)." << endl;
        }
    }

    return 0;
}
