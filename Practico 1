#include <iostream>
using namespace std;

int main() {
    int hamb, hambQ, papas, soda;
    float total;

    cout << "Cantidad de hamburguesas (3Bs c/u): ";
    cin >> hamb;

    cout << "Cantidad de hamburguesas con queso (5Bs c/u): ";
    cin >> hambQ;

    cout << "Cantidad de papas fritas (2Bs c/u): ";
    cin >> papas;

    cout << "Cantidad de sodas (2.5Bs c/u): ";
    cin >> soda;

    total = hamb*3 + hambQ*5 + papas*2 + soda*2.5;

    cout << "El total a pagar es: Bs. " << total << endl;

    return 0;
}
