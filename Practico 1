#include <iostream>
using namespace std;

int main() {
    float C, T, I;
    int N;

    cout << "Ingresa el capital (C): ";
    cin >> C;

    cout << "Ingresa la tasa de interes (%): ";
    cin >> T;

    cout << "Ingresa el numero de aÃ±os: ";
    cin >> N;

    I = (C * T * N) / 100;

    cout << "El interes simple ganado es: " << I << endl;

    return 0;
}
6
#include <iostream>
using namespace std;

int main() {
    int h, m, s;
    string periodo;

    cout << "Ingresa la hora (HH MM SS) en formato 24h: ";
    cin >> h >> m >> s;

    if (h == 0) {
        h = 12;
        periodo = "AM";
    } else if (h < 12) {
        periodo = "AM";
    } else if (h == 12) {
        periodo = "PM";
    } else {
        h = h - 12;
        periodo = "PM";
    }

    cout << "Hora en formato 12h: " << h << ":" << m << ":" << s << " " << periodo << endl;

    return 0;
}
