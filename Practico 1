}
c) #include <iostream>
#include <cmath> // para sqrt
using namespace std;

int main() {
    float a, b, c, discriminante, x1, x2;

    cout << "Resolver ax^2 + bx + c = 0" << endl;
    cout << "Ingresa a: ";
    cin >> a;
    cout << "Ingresa b: ";
    cin >> b;
    cout << "Ingresa c: ";
    cin >> c;

    if (a == 0) {
        cout << "No es ecuacion cuadratica, a no puede ser 0." << endl;
    } else {
        discriminante = (b * b) - (4 * a * c);

        if (discriminante > 0) {
            x1 = (-b + sqrt(discriminante)) / (2 * a);
            x2 = (-b - sqrt(discriminante)) / (2 * a);
            cout << "Dos soluciones reales: x1 = " << x1 << " y x2 = " << x2 << endl;
        } else if (discriminante == 0) {
            x1 = -b / (2 * a);
            cout << "Una solucion real doble: x = " << x1 << endl;
        } else {
            cout << "No hay soluciones reales (discriminante negativo)." << endl;
        }
    }

    return 0;
}

2 
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    float D, radio, circunferencia, area, volumen;

    cout << "Ingresa el diametro de la esfera: ";
    cin >> D;

    radio = D / 2.0;

    circunferencia = 2 * M_PI * radio;
    area = 4 * M_PI * pow(radio, 2);
    volumen = (4.0 / 3.0) * M_PI * pow(radio, 3);

    cout << "Circunferencia: " << circunferencia << endl;
    cout << "Area: " << area << endl;
    cout << "Volumen: " << volumen << endl;

    return 0;
}
