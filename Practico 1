#include <iostream>
using namespace std;

int main() {
    float examen1, examen2, examen3, final, proyecto, notaFinal;

    cout << "Ingresa las notas de los 3 examenes (sobre 40 cada uno): ";
    cin >> examen1 >> examen2 >> examen3;

    cout << "Ingresa la nota del examen final (sobre 40): ";
    cin >> final;

    cout << "Ingresa la nota del proyecto final (sobre 20): ";
    cin >> proyecto;

    notaFinal = examen1 + examen2 + examen3 + final + proyecto;

    cout << "La nota final del alumno es: " << notaFinal << endl;

    return 0;
}
4
#include <iostream>
using namespace std;

int main() {
    string nombre;
    float horas, precioHora, salarioBruto, descuento, salarioNeto;

    cout << "Nombre del trabajador: ";
    cin >> nombre;

    cout << "Horas trabajadas al mes: ";
    cin >> horas;

    cout << "Precio por hora: ";
    cin >> precioHora;

    salarioBruto = horas * precioHora;

    if (salarioBruto > 8272) {
        descuento = salarioBruto * 0.13;
    } else {
        descuento = 0;
    }

    salarioNeto = salarioBruto - descuento;

    cout << "Trabajador: " << nombre << endl;
    cout << "Salario bruto: " << salarioBruto << endl;
    cout << "Descuento RC-IVA: " << descuento << endl;
    cout << "Salario neto: " << salarioNeto << endl;

    return 0;
}
