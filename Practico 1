#include <iostream>
using namespace std;

int main() {
    char opcion;

    cout << "El auto esta apagado." << endl;
    cout << "Â¿Quieres encenderlo? (s/n): ";
    cin >> opcion;

    if (opcion == 's' || opcion == 'S') {
        cout << "Encendiste el auto." << endl;
        cout << "Â¿Quieres conducir? (s/n): ";
        cin >> opcion;

        if (opcion == 's' || opcion == 'S') {
            cout << "Estas conduciendo el auto." << endl;
            cout << "Â¿Quieres detener el auto? (s/n): ";
            cin >> opcion;

            if (opcion == 's' || opcion == 'S') {
                cout << "Detuviste el auto." << endl;
            } else {
                cout << "Sigues conduciendo..." << endl;
            }
        } else {
            cout << "No condujiste, el auto sigue encendido." << endl;
        }
    } else {
        cout << "El auto sigue apagado." << endl;
    }

    return 0;
} 
