#include <iostream>
#include <cmath>
using namespace std;

int main() {
    float C, T, M;
    int N;

    cout << "Ingresa el capital (C): ";
    cin >> C;

    cout << "Ingresa la tasa de interes (%): ";
    cin >> T;

    cout << "Ingresa el numero de aÃ±os: ";
    cin >> N;

    M = C * pow(1 + T / 100, N);

    cout << "El monto final con interes compuesto es: " << M << endl;
    cout << "El interes ganado es: " << M - C << endl;

    return 0;
}
8
#include <iostream>
using namespace std;

int main() {
    float A, B, C, D, E, F;
    float determinante, x, y;

    cout << "Ingresa A, B y C: ";
    cin >> A >> B >> C;

    cout << "Ingresa D, E y F: ";
    cin >> D >> E >> F;

    determinante = A * E - B * D;

    if (determinante == 0) {
        cout << "El sistema no tiene solucion unica." << endl;
    } else {
        x = (C * E - B * F) / determinante;
        y = (A * F - C * D) / determinante;

        cout << "Solucion: X = " << x << " , Y = " << y << endl;
    }

    return 0;
}
