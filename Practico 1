#include <iostream>
using namespace std;

int main() {
    int segundos, horas, minutos, resto;

    cout << "Ingresa la cantidad de segundos: ";
    cin >> segundos;

    horas = segundos / 3600;
    resto = segundos % 3600;
    minutos = resto / 60;
    segundos = resto % 60;

    cout << horas << " hora(s), " << minutos << " minuto(s), " << segundos << " segundo(s)" << endl;

    return 0;
}
10
#include <iostream>
using namespace std;

int main() {
    int h1, m1, s1, h2, m2, s2;
    int total1, total2, dif, dh, dm, ds;

    cout << "Hora inicial (HH MM SS): ";
    cin >> h1 >> m1 >> s1;

    cout << "Hora final (HH MM SS): ";
    cin >> h2 >> m2 >> s2;

    total1 = h1 * 3600 + m1 * 60 + s1;
    total2 = h2 * 3600 + m2 * 60 + s2;

    dif = total2 - total1;

    if (dif < 0) {
        cout << "Error: la hora final es menor que la inicial." << endl;
    } else {
        dh = dif / 3600;
        dif %= 3600;
        dm = dif / 60;
        ds = dif % 60;

        cout << "Diferencia: " << dh << " horas, " << dm << " minutos, " << ds << " segundos." << endl;
    }

    return 0;
}
