#include <iostream> // librerias
//utilizar la salida y la entrada estandar teclado y monitor
using namespace std;

int main()
{
    //declarar variables en C++
    int N,C,T,I;
    cout<<"Ingrese el primer numero.. ";
    cin>>C;
    cout<<"Ingrese la tasa de interes.. ";
    cin>>T;
    cout<<"Ingrese el numero de anios.. ";
    cin>>N;
    I=C*T*N;
    cout<<"El interes simple ganado es; "<<I<<endl;

    return 0;
}
