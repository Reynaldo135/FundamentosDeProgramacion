        break;
        case 4:precio = 2.5;
        break;
        case 0: 
        cout << "saliendo";
        default:
            cout << "error";
} 
     if(precio>0) {
         cout << "ingrese la cantidad"
             cin >> cantidad;
         tp = precio * cantidad;
         suma = suma * cantidad;
         }
     }while (opcion != 0) :
         cout <<"el total es" << suma << endl;
 }
